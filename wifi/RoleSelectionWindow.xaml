<Window x:Class="wifi.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Выбор роли" Height="200" Width="300" MinHeight = "200" MaxHeight = "200" MinWidth = "300" MaxWidth = "300"
        WindowStartupLocation="CenterScreen" Background="#FF163832" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" >
        <TextBlock Text="Выберите роль:" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White"/>
        <Button Content="Обычный пользователь" Width="200" Margin="0,0,0,10" Click="User_Click" Background="#FFDAF1DE"/>
        <Button Content="Администратор" Width="200" Click="Admin_Click" Background="#FF8EB69B"/>
    </StackPanel>
</Window>
