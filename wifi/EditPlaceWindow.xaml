<Window x:Class="wifi.EditPlaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать место" Height="500" Width="435" MinHeight = "500" MaxHeight = "500" MinWidth = "435" MaxWidth = "435"
        WindowStartupLocation="CenterScreen"
        Background="#FF163832" ResizeMode="NoResize"
        >
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Название:" Foreground="White"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10" MaxLength="100" TextWrapping="Wrap"/>

            <TextBlock Text="Тип:" Foreground="White"/>
            <ComboBox x:Name="TypeBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Кафе"/>
                <ComboBoxItem Content="Библиотека"/>
                <ComboBoxItem Content="Лаунж-зона"/>
            </ComboBox>

            <TextBlock Text="Адрес:" Foreground="White"/>
            <TextBox x:Name="AddressBox" Margin="0,0,0,10" MaxLength="45" TextWrapping="Wrap"/>

            <TextBlock Text="Качество Wi-Fi:" Foreground="White"/>
            <ComboBox x:Name="WiFiBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Плохо"/>
                <ComboBoxItem Content="Средне"/>
                <ComboBoxItem Content="Хорошо"/>
                <ComboBoxItem Content="Отлично"/>
            </ComboBox>

            <TextBlock Text="Часы работы: (формат 00:00-00:00 или 'Круглосуточно')" Foreground="White"/>
            <TextBox x:Name="WorkBox" Margin="0,0,0,10" MaxLength="45" TextWrapping="Wrap"/>

            <TextBlock Text="Контакт (телефон/почта):" Foreground="White"/>
            <TextBox x:Name="ContactBox" Margin="0,0,0,10" MaxLength="45" TextWrapping="Wrap"/>

            <TextBlock Text="Краткое описание:" Foreground="White"/>
           

            <Button Content="Сохранить" Click="Save_Click" Background="#FF8EB69B"/>
        </StackPanel>
    </ScrollViewer>
</Window>
