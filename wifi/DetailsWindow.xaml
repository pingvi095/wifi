<Window x:Class="wifi.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали места"  Height="700" Width="820" MinHeight="700" MaxHeight="700" MinWidth="820" MaxWidth="820" 
        WindowStartupLocation="CenterScreen" Background="#FF163832" ResizeMode="NoResize"
       >

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая колонка -->
        <StackPanel Grid.Column="0" Margin="0,0,12,0">
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="4">
                <Image x:Name="PhotoImg" Height="240" Stretch="Uniform" />
            </Border>

            <StackPanel Margin="0,12,0,0">
                <TextBlock Text="Контакты:" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="ContactText" TextWrapping="Wrap" Margin="0,4,0,8" Background="White"/>

                <TextBlock Text="Часы работы:" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="HoursText" TextWrapping="Wrap" Margin="0,4,0,8" Background="White"/>

                <TextBlock Text="Wi-Fi:" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="WiFiText" Margin="0,4,0,8" Background="White"/>

                <TextBlock Text="Рейтинг:" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="RatingText" Margin="0,4,0,8" Background="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая колонка -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Название:" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="NameText" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,8" Background="White"/>

            <TextBlock Text="Отзывы:" FontWeight="Bold" Margin="0,4,0,6" Foreground="White"/>

            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,8" Background="White">
                <ScrollViewer Height="220" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ReviewsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Author}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock Text="Оценка:" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Stars}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" 
                                                       HorizontalAlignment="Right" FontSize="10" Foreground="Gray" Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Добавление отзыва -->
            <TextBlock Text="Добавить отзыв:" FontWeight="Bold" Margin="0,4,0,6" Foreground="White"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBox x:Name="AuthorBox" Width="220" MaxLength="45" VerticalAlignment="Center" Height="26" />
                <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Оценка:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
                    <ComboBox x:Name="StarsBox" Width="70" SelectedIndex="2" BorderBrush="#FFC6EDCC">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFC6EDCC"/>
                                <GradientStop Color="#FFEDC6C6" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                        <ComboBoxItem>1</ComboBoxItem>
                        <ComboBoxItem>2</ComboBoxItem>
                        <ComboBoxItem>3</ComboBoxItem>
                        <ComboBoxItem>4</ComboBoxItem>
                        <ComboBoxItem>5</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <TextBox x:Name="CommentBox" Height="70" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="100" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                <Button Content="Отправить" Width="120" Click="SendReview_Click" Background="#FFC6EDCC"/>
                <Button Content="Закрыть" Width="80" Margin="8,0,0,0" Click="Close_Click" Background="#FF99D2A2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
