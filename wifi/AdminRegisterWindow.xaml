<Window x:Class="wifi.AdminRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Background="#FF163832"
        Icon="E:\wifi — копия\wifi — копия\wifi\Icons\free-icon-wifi-signal-88014.png"
        Title="Регистрация администратора" Height="255" Width="340" MinHeight = "255" MaxHeight = "255" MinWidth = "340" MaxWidth = "340"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Имя пользователя:" Foreground="White"/>
        <TextBox x:Name="UsernameBox" Margin="0,4,0,10" MaxLength="50"/>

        <TextBlock Text="Пароль:" Foreground="White"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,10" MaxLength="50"/>

        <TextBlock Text="Повторите пароль:" Foreground="White"/>
        <PasswordBox x:Name="ConfirmBox" Margin="0,4,0,20" MaxLength="50"/>

        <Button Content="Зарегистрировать" Width="150" HorizontalAlignment="Center" Click="Register_Click" Background="#FFA8C3AD"/>
    </StackPanel>
</Window>
